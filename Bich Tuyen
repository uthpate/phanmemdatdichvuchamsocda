const questions = [
    {
        question: "Báº¡n quan tÃ¢m Ä‘áº¿n lÄ©nh vá»±c nÃ o?",
        options: [
            { text: "CÃ´ng nghá»‡", value: "tech" },
            { text: "Sá»©c khá»e", value: "health" },
            { text: "TÃ i chÃ­nh", value: "finance" }
        ]
    },
    {
        question: "Báº¡n muá»‘n dá»‹ch vá»¥ cÃ¡ nhÃ¢n hay doanh nghiá»‡p?",
        options: [
            { text: "CÃ¡ nhÃ¢n", value: "personal" },
            { text: "Doanh nghiá»‡p", value: "business" }
        ]
    },
    {
        question: "Báº¡n Æ°u tiÃªn yáº¿u tá»‘ nÃ o nháº¥t?",
        options: [
            { text: "GiÃ¡ cáº£", value: "cost" },
            { text: "Cháº¥t lÆ°á»£ng", value: "quality" },
            { text: "Tá»‘c Ä‘á»™", value: "speed" }
        ]
    }
];

const services = [
    { name: "Dá»‹ch vá»¥ phÃ¡t triá»ƒn web", category: "tech", type: "business", priority: "quality" },
    { name: "GÃ³i tÆ° váº¥n tÃ i chÃ­nh cÃ¡ nhÃ¢n", category: "finance", type: "personal", priority: "cost" },
    { name: "Dá»‹ch vá»¥ khÃ¡m sá»©c khá»e tá»•ng quÃ¡t", category: "health", type: "personal", priority: "quality" },
    { name: "Dá»‹ch vá»¥ chuyá»ƒn tiá»n nhanh", category: "finance", type: "business", priority: "speed" }
];

function analyzeResults(answers) {
    return services.filter(service =>
        service.category === answers.category &&
        service.type === answers.type &&
        service.priority === answers.priority
    );
}

function startQuiz() {
    let answers = {};
    questions.forEach(q => {
        let answer = prompt(q.question + "\n" + q.options.map(o => o.text).join("\n"));
        let chosenOption = q.options.find(o => o.text.toLowerCase() === answer.toLowerCase());
        if (chosenOption) {
            let key = Object.keys(answers).length === 0 ? "category" :
                      Object.keys(answers).length === 1 ? "type" : "priority";
            answers[key] = chosenOption.value;
        }
    });

    let suggestedServices = analyzeResults(answers);
    console.log("ðŸ”¹ Dá»‹ch vá»¥ phÃ¹ há»£p vá»›i báº¡n:");
    suggestedServices.forEach(service => console.log(`âœ… ${service.name}`));
}

startQuiz();
